<h1>This is edit page</h1>

<%= form_for @task , url: task_path(@task) do |f| %>

<% if @task.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@task.errors.count, "error") %> 更新に失敗しました:</h2>
    <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :detail %><br>
    <%= f.text_area :detail %>
  </p>

  <p>
    <%= f.label :deadline %><br>
    <%= f.datetime_select :deadline %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', tasks_path %>
