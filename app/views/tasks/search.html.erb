<h1>Search</h1>
<table>
  <tr>
    <th><%=t :name %></th>
    <th><%=t :detail %></th>
    <th><%=t :deadline %></th>
    <th>ステータス</th>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.name %></td>
      <td><%= task.detail %></td>
      <td><%= task.deadline %></td>
      <td><%= task.status %></td>
      <td><%= link_to 'Edit', edit_task_path(task) %></td>
      <td><%= link_to 'Show', task_path(task) %></td>
      <td><%= link_to 'DELETE', task_path(task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', tasks_path %>
